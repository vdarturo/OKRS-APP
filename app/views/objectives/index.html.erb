<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-10">
            <h4 class="m-0 font-weight-bold text-primary">Objectives</h4>
          </div>
          <div class="col text-right">
            <%= link_to "New", new_objective_path, class:"btn btn-success" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% @objectives.each do |objective| %>
          <div class="row p-2">
            <div class="col-7">
              <%= objective.name %>
            </div>
            <div class="col">
              <%= objective.average_progress %>%
            </div>
            <div class="col text-right">
              <%= button_to "Show", objective_path(objective.id), class:"btn btn-success", method: :get%>
            </div>
            <div class="col text-right">
              <%= button_to "Update", edit_objective_path(objective.id), class:"btn btn-success", method: :get%>
            </div>
            <div class="col text-right">
              <%= button_to "Delete", objective, class:"btn btn-success", method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-2"></div>
</div>
